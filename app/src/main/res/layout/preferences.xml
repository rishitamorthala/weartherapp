<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleWeatherPreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather Preferences"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:paddingBottom="16dp" />

            <!-- Question #1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textDoYouGetColdEasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you get cold easy?"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium" />

                <RadioGroup
                    android:id="@+id/radioGroupCold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/radioYesCold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:buttonTint="#1E88E5"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                    <RadioButton
                        android:id="@+id/radioNoCold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:buttonTint="#1E88E5"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="16dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- Question #2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textDoYouGetHotEasy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you get hot easily?"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium" />

                <RadioGroup
                    android:id="@+id/radioGroupHot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/radioYesHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:buttonTint="#1E88E5"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                    <RadioButton
                        android:id="@+id/radioNoHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"
                        android:buttonTint="#1E88E5"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="16dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- Question #3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/card_background"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textWindPreference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How much wind bothers you?"
                    android:textSize="18sp"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif-medium" />

                <RadioGroup
                    android:id="@+id/radioGroupWind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/radioHighWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:buttonTint="#1E88E5"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                    <RadioButton
                        android:id="@+id/radioModerateWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moderate"
                        android:buttonTint="#1E88E5"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="8dp" />

                    <RadioButton
                        android:id="@+id/radioLowWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low"
                        android:buttonTint="#1E88E5"
                        android:textColor="#555555"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="8dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- Style Preferences Section -->
            <TextView
                android:id="@+id/textStylePreferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Style Preferences"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1E88E5"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/styleOptionsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/radioCasual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Casual"
                    android:textColor="#1E88E5"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="8dp" />

                <RadioButton
                    android:id="@+id/radioFormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Formal"
                    android:textColor="#1E88E5"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="8dp" />

                <RadioButton
                    android:id="@+id/radioSporty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sporty"
                    android:textColor="#1E88E5"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="8dp" />

                <RadioButton
                    android:id="@+id/radioTrendy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trendy"
                    android:textColor="#1E88E5"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Skip Button -->
            <Button
                android:id="@+id/buttonSkip"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="SKIP"
                android:backgroundTint="#1E88E5"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:elevation="6dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="8dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
